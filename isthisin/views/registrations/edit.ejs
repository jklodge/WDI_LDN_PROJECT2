<div class="container">
  <form method="POST" action="/users/<%= user._id %>">

    <input type="hidden" name="_method" value="PUT">

    <div class="field">
      <label class="label">Username</label>
      <div class="control">
        <input class="input" name="username" type="text" value="<%= locals.currentUser.username  %>">
      </div>
    </div>

    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <input class="input" name="email" type="text" value="<%= locals.currentUser.email  %>">
      </div>
    </div>

    <div class="field">
   <label class="label">Profile Image</label>
   <div class="control">
     <img class="imgPreview" src="<%= locals.currentUser.image  %>">
     <input type="hidden" name="image" required />
     <button class="button image-upload" type="button">Choose an image to upload</button>
   </div>
 </div>
    <div class="field">
      <label class="label">A bit about you!</label>
      <div class="control">
        <textarea class="textarea" name="aboutyou" maxlength="380"><%= locals.currentUser.aboutyou  %></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>
  </form>
</div>
